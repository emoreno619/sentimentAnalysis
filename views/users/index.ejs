<% include ../partials/header2 %>
    <h2>All the Users</h2>
    <a href="/signup">Signup</a>
    <br>
    <a href="/login">Login</a>

    <table class="table table-striped table-hover">
      <thead>
        <tr>
          <th>Email</th>
          <th>Favorite Places</th>
          <th>Reviews</th>
        </tr>
      </thead>
      <tbody>

        <% users.forEach(function(user){ %>
          <tr>
          <td><a href="/users/<%= user.id%>"><%= user.email%></a></td>
          <td><% user.favPlaces.forEach(function(favPlace){ %><a href="/places/<%= favPlace.place._id%>"><%= favPlace.name%><% }) %></td>
          <td><% user.Reviews.forEach(function(review){ %> <a href="/places/<%= review.place._id%>/reviews/<%= review.id%>"><%= review.title%></a><% }) %></td>
          <td><a href="/users/<%= user.id%>/edit">Edit</a></td>
          <td>
            <form action='/users/<%= user.id %>?_method=DELETE' method="POST">
              <input type="submit" value="X" class="btn btn-sm btn-danger">
            </form>
          </td>
        </tr>
        <% })%>
      </tbody>
    </table>
<% include ../partials/footer %>