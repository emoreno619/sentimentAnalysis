<% include ../partials/header2 %>
    <h2>All the Users</h2>
    <a href="/signup">Signup</a>
    <br>
    <a href="/login">Login</a>

    <table class="table table-striped table-hover">
      <thead>
        <tr>
          <th>Email</th>
          <th>Favorite Places</th>
          <th>Reviews</th>
        </tr>
      </thead>
      <tbody>

        <% users.forEach(function(user){ %>
          <tr>
          <td><a href="/users/<%= user.id%>"><%= user.email%></a></td>
          <td>
            <% user.favPlaces.forEach(function(favPlace){ %>
              <% places.forEach(function(aPlace){ if (aPlace.id == favPlace){ %>
                <a href="/places/<%= aPlace.id%>"><%= aPlace.name%></a>
                <% if(places.length > 1){ %>, <% } %>
            <% }})}) %>
          </td>
          <td>
            <% user.Reviews.forEach(function(review){ %>
               <% reviews.forEach(function(aReview){ if (aReview.id == review){ %>
                  <a href="/places/<%= aReview.place%>/reviews/<%= aReview.id%>"><%= aReview.title%></a>
                  <% if(reviews.length > 1){ %>, <% } %>
            <% }})}) %>
          </td>
          <td><a href="/users/<%= user.id%>/edit">Edit</a></td>
          <td>
            <form action='/users/<%= user.id %>?_method=DELETE' method="POST">
              <input type="submit" value="X" class="btn btn-sm btn-danger">
            </form>
          </td>
        </tr>
        <% })%>
      </tbody>
    </table>
<% include ../partials/footer %>