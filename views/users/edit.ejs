<% include ../partials/header2 %>

    <h2>Edit a user</h2>
    <form action='/users/<%= user.id %>?_method=PUT' method="POST">
      <div class="form-group">
        <label for="email">email:</label>
        <input type="text" name="user[email]" id="" class="form-control" value= "<%= user.email%>" autofocus>
      </div>
      <div class="form-group">
        <input type="submit" value="Edit email" class ="btn btn-info btn-lg">
      </div>
    </form>
  
    <h1><a href="/places/<%= place._id%>"><%= user.email%></a>'s reviews:</h1>
    <div>
      <% user.Reviews.forEach(function(review){ %>
        <p>
          <%= review.place.name %>
        </p>
        <p>
          <%= review.title %>
        </p>
        <p>
          <%= review.rating %>
        </p>
        <p>
          <%= review.body %>
        </p>
        <div>
          <p>
             <a href="/places/<%= review.place._id%>/reviews/<%= review._id%>/edit">Edit this review</a>
          </p>
          <form action="/places/<%= review.place._id%>/reviews/<%= review._id%>?_method=DELETE" method="POST">
            <input type="submit" value="DELETE">
          </form>
        </div>
      <% })%>
    </div>

<% include ../partials/footer %>